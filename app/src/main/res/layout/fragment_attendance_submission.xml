<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.AttendanceSubmissionFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_filter_submission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabRippleColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/CustomTabLayout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_submission"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_submission_attendance"
        tools:itemCount="4"
        app:layout_constraintTop_toBottomOf="@id/tabs_filter_submission"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="10dp"/>

    <ImageView
        android:id="@+id/iv_submission_if_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/undraw_no_data_re_kwbl_1"
        app:layout_constraintTop_toBottomOf="@id/tabs_filter_submission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_submission_if_null"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_submission_if_null"
        android:text="There are currently no submission added"
        android:fontFamily="@font/poppins_regular"
        android:textSize="18sp"
        android:textColor="@color/gray300"
        app:layout_constraintTop_toBottomOf="@id/iv_submission_if_null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAllCaps="false"
        android:ems="10"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"/>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:padding="20dp"
            style="@style/CustomFAB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="50dp"
            android:translationZ="100dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/calendar_2"
            style="@style/CustomFAB2"
            app:layout_constraintBottom_toTopOf="@id/fab_leave_request"
            app:layout_constraintEnd_toEndOf="@+id/fab_add_submission"
            app:layout_constraintStart_toStartOf="@id/fab_add_submission"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_fab_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toStartOf="@id/fab_attendance"
            app:layout_constraintTop_toTopOf="@id/fab_attendance"
            app:layout_constraintBottom_toBottomOf="@id/fab_attendance"
            android:layout_marginEnd="30dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_leave_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logout"
            style="@style/CustomFAB2"
            app:layout_constraintBottom_toTopOf="@id/fab_shift_change"
            app:layout_constraintEnd_toEndOf="@+id/fab_add_submission"
            app:layout_constraintStart_toStartOf="@id/fab_add_submission"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_fab_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_request"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toStartOf="@id/fab_leave_request"
            app:layout_constraintTop_toTopOf="@id/fab_leave_request"
            app:layout_constraintBottom_toBottomOf="@id/fab_leave_request"
            android:layout_marginEnd="30dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_shift_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/calendar_2"
            style="@style/CustomFAB2"
            app:layout_constraintBottom_toTopOf="@+id/fab_add_submission"
            app:layout_constraintEnd_toEndOf="@+id/fab_add_submission"
            app:layout_constraintStart_toStartOf="@id/fab_add_submission"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_fab_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_change"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toStartOf="@id/fab_shift_change"
            app:layout_constraintTop_toTopOf="@id/fab_shift_change"
            app:layout_constraintBottom_toBottomOf="@id/fab_shift_change"
            android:layout_marginEnd="30dp"/>

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>