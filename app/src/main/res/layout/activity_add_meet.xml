<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.activities.AddMeetActivity"
        tools:ignore="ScrollViewSize">

        <ImageButton
            android:id="@+id/btn_arrow_back_meet"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="46dp"
            android:background="@color/bg_gray"
            android:src="@drawable/ic_arrow_back_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear_title_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/btn_arrow_back_meet"
            app:layout_constraintStart_toEndOf="@id/btn_arrow_back_meet"
            app:layout_constraintTop_toTopOf="@id/btn_arrow_back_meet"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/title_about_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/meet"
                android:textColor="@color/gray3"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_title_meet_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/tittle"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_title_meet"
            tools:ignore="MissingConstraints,RtlHardcoded">

        </TextView>

        <EditText
            android:id="@+id/title_edittext_meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/value"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_meet_meet"
            tools:ignore="Autofill,MissingConstraints,TextFields" />

        <TextView
            android:id="@+id/txt_title_project_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/project"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_edittext_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/txt_title_project_optional_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/optional"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_title_project_meet"
            app:layout_constraintStart_toEndOf="@id/txt_title_project_meet"
            app:layout_constraintTop_toTopOf="@id/txt_title_project_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <Spinner
            android:id="@+id/action_bar_spinner_project_meet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_project_optional_meet"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_title_meeting_mode_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/meeting_mode"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar_spinner_project_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <Spinner
            android:id="@+id/action_bar_spinner_meeting_mode_meet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_meeting_mode_meet"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMeetingMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar_spinner_meeting_mode_meet"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_link_online_meet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:startIconDrawable="@drawable/link">

                <EditText
                    android:id="@+id/edittext_link_online_meet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_employee_id"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#D3D3D3"
                    android:textSize="16sp"
                    tools:ignore="Autofill,MissingConstraints,TextFields" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_link_offline_meet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:startIconDrawable="@drawable/location">

                <EditText
                    android:id="@+id/edittext_link_offline_meet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_employee_id"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#D3D3D3"
                    android:textSize="16sp"
                    tools:ignore="Autofill,MissingConstraints,TextFields" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt_title_date_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/date"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintMeetingMode"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/date_edittext_meet"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/dd_mm_yyyy"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_date_meet"
            tools:ignore="Autofill,MissingConstraints,TextFields" />


        <TextView
            android:id="@+id/txt_title_time_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/time"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/date_edittext_meet"
            app:layout_constraintTop_toBottomOf="@id/constraintMeetingMode"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/time_edittext_meet"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/am"
            android:inputType="time"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/date_edittext_meet"
            app:layout_constraintTop_toBottomOf="@id/txt_title_date_meet"
            tools:ignore="Autofill,MissingConstraints,TextFields" />

        <TextView
            android:id="@+id/txt_title_deskripsi_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/description"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_edittext_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <TextView
            android:id="@+id/txt_title_deskripsi_optional_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/optional"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_title_deskripsi_meet"
            app:layout_constraintStart_toEndOf="@id/txt_title_deskripsi_meet"
            app:layout_constraintTop_toTopOf="@id/txt_title_deskripsi_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <EditText
            android:id="@+id/description_edittext_meet"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_edittext_employee_id"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top|start"
            android:hint="@string/value"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/date_edittext_meet"
            app:layout_constraintTop_toBottomOf="@id/txt_title_deskripsi_optional_meet"
            tools:ignore="Autofill,MissingConstraints,TextFields" />

        <TextView
            android:id="@+id/helper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/entered_your_description_for_meet"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/ic_user_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/user_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_edittext_meet"
            tools:ignore="ContentDescription,MissingConstraints" />

        <TextView
            android:id="@+id/txt_title_add_member_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/add_meeting"
            android:textColor="@color/gray2"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/ic_user_add"
            app:layout_constraintTop_toBottomOf="@id/description_edittext_meet"
            tools:ignore="MissingConstraints,RtlHardcoded" />

        <LinearLayout
            android:id="@+id/linearAddMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_add_member_meet"
            tools:ignore="MissingConstraints">

            <include
                android:id="@+id/btn_circle_add_meet"
                layout="@layout/custom_button_add_meet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSelectedMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintStart_toEndOf="@id/btn_circle_add_meet" />
        </LinearLayout>


        <com.example.task2_attendright.presentation.ui.customview.CustomButtonCreateAddMeet
            android:id="@+id/btn_create_add_meet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearAddMembers" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>