<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_item_today_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"

        app:strokeWidth="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="17dp"
            >
            <ImageView
                android:id="@+id/iv_clock_item_today_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_clock_in_attendance"
                android:src="@drawable/clock"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_time_item_today_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_16_20_wib"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray500"
                app:layout_constraintStart_toEndOf="@id/iv_clock_item_today_task"
                app:layout_constraintTop_toTopOf="@id/iv_clock_item_today_task"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/tv_item_task_today_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_web_design_intermediate"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/gray600"
                app:layout_constraintTop_toBottomOf="@id/iv_clock_item_today_task"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cv_border_coin_item_today_task"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_border_coin_item_today_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_item_task_today_task"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="@color/p1"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_coin_clockin_out_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group_15"
                        app:layout_constraintTop_toBottomOf="@id/tv_clockin_out_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_clockin_out_time_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2_000"
                        android:textColor="@color/gray500"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="14sp"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="10dp"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_presentase_progres_item_today_task"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:src="@drawable/group_41"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_item_task_today_task"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>