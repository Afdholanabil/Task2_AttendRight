<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.about_apps_activity">

    <ImageView
        android:id="@+id/img_arrow_back_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_arrow_back_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded" />

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/img_arrow_back_2"
        app:layout_constraintStart_toEndOf="@id/img_arrow_back_2"
        app:layout_constraintTop_toTopOf="@id/img_arrow_back_2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title_about_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/about_app"
            android:textColor="@color/gray3"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_apps_about_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/attendright_apps"
        android:textColor="@color/gray3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_title"/>

    <TextView
        android:id="@+id/title_version_about_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/version_2_24_12_16"
        android:textColor="@color/gray4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_apps_about_apps"/>

    <ImageView
        android:id="@+id/logo_attendright_about_apps"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_attendright"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_version_about_apps"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription,MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/title_year_about_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/_2024_pt_otak_kanan"
        android:textColor="@color/gray4"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_attendright_about_apps"/>

    <com.example.task2_attendright.presentation.customview.CustomButtonAboutApps
        android:id="@+id/btn_maps_refresh"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_refresh"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/title_year_about_apps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>