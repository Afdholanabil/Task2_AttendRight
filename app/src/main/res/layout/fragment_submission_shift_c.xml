<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.ui.fragments.SubmissionShiftCFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp">
        <ImageView
            android:id="@+id/iv_back_sub_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon_back"
            android:src="@drawable/arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_back_sub_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_change"
            android:textSize="20sp"
            android:textColor="@color/gray800"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toEndOf="@id/iv_back_sub_attendance"
            app:layout_constraintTop_toTopOf="@id/iv_back_sub_attendance"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_sub_attendance"
            android:layout_marginStart="20dp"/>



        <TextView
            android:id="@+id/tv_title_sub_shift_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/tv_back_sub_attendance"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_title_sub_shift_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sub_shift_change"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_edit_text_login"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeErrorColor="@color/red500"
            android:hint="@string/title"
            android:textColorHint="@color/gray300"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="@string/title"
                android:inputType="text"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_effective_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/effective_date"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/tl_title_sub_shift_change"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/ll_date_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_effective_date">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar_black"/>
            <TextView
                android:id="@+id/tv_date_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nov_10_2024_nov_11_2024"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/gray500"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shift_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_now"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/ll_date_sub"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinner_shift_now_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shift_pagi_08_00_13_00"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="@color/gray500"
            android:background="@drawable/bg_spinner_style"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_shift_now"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/tv_shift_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_submission"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/spinner_shift_now_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinner_shift_sub_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shift_siang_13_30_17_00"
            android:fontFamily="@font/poppins_regular"

            android:textSize="14sp"
            android:textColor="@color/gray500"
            android:background="@drawable/bg_spinner_style"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_shift_sub"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/tv_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/spinner_shift_sub_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/tv_title_desc_op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/optional"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toEndOf="@id/tv_title_desc"
            app:layout_constraintTop_toTopOf="@id/tv_title_desc"
            app:layout_constraintBottom_toBottomOf="@id/tv_title_desc"
            android:layout_marginStart="5dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_edit_text_login"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeErrorColor="@color/red500"
            android:hint="@string/title"
            android:textColorHint="@color/gray300"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:fontFamily="@font/poppins_regular"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_desc_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entered_your_description_for_leave_request"
            android:textSize="12sp"
            android:textColor="@color/gray400"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/tl_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/iv_up_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon_back"
            android:src="@drawable/document_upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_desc"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_up_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toEndOf="@id/iv_up_img"
            app:layout_constraintTop_toTopOf="@id/iv_up_img"
            app:layout_constraintBottom_toBottomOf="@id/iv_up_img"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_desc_up_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/only_jpeg_png_jpg_are_accepted_file_size_maximal_10_mb"
            android:textSize="12sp"
            android:textColor="@color/gray400"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/iv_up_img"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="14"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/cv_up_img"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_card_stroke_dot"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_up_img"
            app:layout_constraintBottom_toTopOf="@id/btn_send_shift_sub">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paper_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_file_to_upload"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:textColor="@color/gray500"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <com.example.task2_attendright.presentation.ui.customview.MyButton
            android:id="@+id/btn_send_shift_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_up_img"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>