<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_item_meeting_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"

        app:strokeWidth="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="17dp"
            >
            <TextView
                android:id="@+id/tv_item_title_meeting_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting_project_wisata"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/gray600"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/iv_lokasi_meeting_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_location_meeting_today"
                android:src="@drawable/location"
                app:layout_constraintTop_toBottomOf="@id/tv_item_title_meeting_today"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_location_meeting_today"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/lokasi_meeting_today"
                android:maxLines="3"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray500"
                app:layout_constraintStart_toEndOf="@id/iv_lokasi_meeting_today"
                app:layout_constraintTop_toBottomOf="@id/tv_item_title_meeting_today"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_border_type_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_item_title_meeting_today"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/red2"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_location_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_red"
                        app:layout_constraintTop_toBottomOf="@id/tv_clockin_out_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_clockin_out_time_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offline"
                        android:textColor="@color/red500"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="15sp"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="10dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/tv_time_meeting_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_00_am"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/gray500"
                app:layout_constraintTop_toBottomOf="@id/cv_border_type_meeting"
                app:layout_constraintEnd_toEndOf="@id/cv_border_type_meeting"
                app:layout_constraintStart_toStartOf="@id/cv_border_type_meeting"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>