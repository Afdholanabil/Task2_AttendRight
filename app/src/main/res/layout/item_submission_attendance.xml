<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuti_hari_raya_keluarga"
        android:textSize="16sp"
        android:textColor="@color/gray500"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_mode_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_request"
        android:textSize="14sp"
        android:textColor="@color/gray500"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_submission"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_status_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_status_submission"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_times_circle"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/tv_status_submission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decline"
                android:textSize="12sp"
                android:textColor="@color/red500"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_submission"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_submission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mode_submission"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_date_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_24_nov_2024_26_nov_2024"
        android:textSize="16sp"
        android:textColor="@color/gray500"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_submission"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>