<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true"
    tools:context=".presentation.ui.fragments.HomeFragment">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_profile_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_nama_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/ginanjar_putra"
            android:textColor="@color/gray600"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/tv_role_profile_home"
            app:layout_constraintStart_toEndOf="@id/iv_profile_home"
            app:layout_constraintTop_toTopOf="@id/iv_profile_home" />

        <TextView
            android:id="@+id/tv_role_profile_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_ux_developer"
            android:textSize="14sp"
            android:textColor="@color/gray400"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toEndOf="@id/iv_profile_home"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_home"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_home"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/iv_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_profile_home"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_home"
            android:layout_marginEnd="30dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_clockin_out"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="0dp"

            android:layout_marginTop="40dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp">
                <TextView
                    android:id="@+id/tv_clockin_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clockin_out_date_home"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/gray600"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/iv_coin_clockin_out_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_clockin_out_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_coin_clockin_out_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin_clockin_out_home"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/gray300"
                    app:layout_constraintTop_toTopOf="@id/iv_coin_clockin_out_home"
                    app:layout_constraintStart_toEndOf="@id/iv_coin_clockin_out_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_border_clockin_out_time_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/p1"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="20dp"

                    >
                    <TextView
                        android:id="@+id/tv_clockin_out_time_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clockin_out_time_home"
                        android:textColor="@color/p1"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="14sp"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.example.task2_attendright.presentation.ui.customview.MyButton
            android:id="@+id/btn_clock_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/clock_in"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_clockin_out"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_clock_out"/>
        <com.example.task2_attendright.presentation.ui.customview.MyButton
            android:id="@+id/btn_clock_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/clock_out"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:enabled="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_clockin_out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_clock_in"/>

        <TextView
            android:id="@+id/tv_title_today_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_attendance"
            android:textSize="16sp"
            android:textColor="@color/gray600"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/btn_clock_in"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_clock_in_attendance"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_today_attendance"
            app:layout_constraintEnd_toStartOf="@id/cv_clock_out_attendance"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="10dp"
            app:strokeWidth="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="17dp"
              >
                <ImageView
                    android:id="@+id/iv_clock_in_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_clock_in_attendance"
                    android:src="@drawable/login"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_title_clock_in_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clock_in"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/gray600"
                    app:layout_constraintStart_toEndOf="@id/iv_clock_in_attendance"
                    app:layout_constraintTop_toTopOf="@id/iv_clock_in_attendance"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/tv_clock_in_attendance_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_08_10_wib"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/red500"
                    app:layout_constraintTop_toBottomOf="@id/iv_clock_in_attendance"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_desc_clock_on_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_minutes_late"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/gray600"
                    app:layout_constraintTop_toBottomOf="@id/tv_clock_in_attendance_time"
                    app:layout_constraintStart_toStartOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_clock_out_attendance"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_today_attendance"
            app:layout_constraintStart_toEndOf="@id/cv_clock_in_attendance"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="17dp"
            >
            <ImageView
                android:id="@+id/iv_clock_out_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon_clock_out_attendance"
                android:src="@drawable/logout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_title_clock_out_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clock_out"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray600"
                app:layout_constraintStart_toEndOf="@id/iv_clock_out_attendance"

                app:layout_constraintTop_toTopOf="@id/iv_clock_out_attendance"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/tv_clock_out_attendance_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_16_20_wib"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/gray600"
                app:layout_constraintTop_toBottomOf="@id/iv_clock_out_attendance"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_desc_clock_out_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_home"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray600"
                app:layout_constraintTop_toBottomOf="@id/tv_clock_out_attendance_time"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_title_today_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_tasks"
            android:textSize="16sp"
            android:textColor="@color/gray600"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/cv_clock_in_attendance"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_see_more_home_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"
            android:textSize="14sp"
            android:textColor="@color/p1"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/cv_clock_out_attendance"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_today_tasks"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_title_today_task"
            tools:ignore="MissingConstraints"
            tools:itemCount="3"
            tools:listitem="@layout/item_rv_today_tasks"/>

        <TextView
            android:id="@+id/tv_title_meeting_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meeting_today"
            android:textSize="16sp"
            android:textColor="@color/gray600"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@id/rv_today_tasks"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_see_more_home_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"
            android:textSize="14sp"
            android:textColor="@color/p1"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/rv_today_tasks"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_meeting_today"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_title_meeting_today"
            tools:ignore="MissingConstraints"
            tools:itemCount="3"
            tools:listitem="@layout/item_rv_meeting_today"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

