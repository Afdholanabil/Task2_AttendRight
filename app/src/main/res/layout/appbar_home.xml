<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_profile_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/image_26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/tv_nama_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/ginanjar_putra"
        android:textColor="@color/gray600"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_role_profile_home"

        app:layout_constraintStart_toEndOf="@id/iv_profile_home"
        app:layout_constraintTop_toTopOf="@id/iv_profile_home" />

    <TextView
        android:id="@+id/tv_role_profile_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_ux_developer"
        android:textSize="14sp"
        android:textColor="@color/gray400"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toEndOf="@id/iv_profile_home"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_home"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_home"

        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_profile_home"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_home"
       android:layout_marginEnd="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>