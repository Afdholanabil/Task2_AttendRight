<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Task2_AttendRight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/p1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>

    </style>

    <style name="Theme.Task2_AttendRight" parent="Base.Theme.Task2_AttendRight" >
        <item name="colorPrimary">@color/p1</item>

    </style>

    <style name="CustomToolbarStyleTitle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomToolbarStyleSubTitle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavTextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavTextAppearanceInactive">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearanceInactive</item>
        <item name="itemIconTint">@color/gray400</item>
        <item name="itemTextColor">@color/gray400</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="cardForegroundColor">@color/white</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="spinnerItemTextStyle">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray500</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner_style</item>
        <item name="android:padding">18dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabSelectedTextColor">@color/orange2</item>
        <item name="tabTextColor">@color/gray400</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="CustomTabTextAppearance2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFABShape</item>
        <item name="materialThemeOverlay">@style/myCustomThemeForNormalFab</item>

    </style>

    <style name="CustomFAB2" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFABShape</item>
        <item name="materialThemeOverlay">@style/myCustomThemeForExtendedFab</item>
    </style>


    <style name="CustomFABShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="myCustomThemeForNormalFab" parent="">
        <item name="colorSecondary">@color/p1</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="myCustomThemeForExtendedFab" parent="">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/p1</item>
    </style>

    <style name="cardUpImage" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/gray300</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="background">@drawable/bg_card_stroke_dot</item>
    </style>

</resources>