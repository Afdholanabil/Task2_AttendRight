<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@android:color/darker_gray"/> <!-- Gray background -->
        </shape>
    </item>
    <!-- Progress layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp"/>
                <solid android:color="@android:color/holo_blue_light"/> <!-- Blue progress -->
            </shape>
        </clip>
    </item>
</layer-list>
